{% extends 'base.html.twig' %}

{% block title %}Edit Calculation{% endblock %}

{% block body %}
    <div class="container mx-auto mt-10 p-5">
        <h1 class="text-3xl font-semibold text-center mb-8">Edit Calculation</h1>

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-bold mb-4">Edit Calculation</h2>
            <form method="POST" action="{{ path('calculation_edit', {id: calculation.id}) }}">
                {{ form(form) }}  {# Render the edit form #}
            </form>
        </div>

    </div>
{% endblock %}
