{% extends 'base.html.twig' %}

{% block title %}Number Multiplier{% endblock %}

{% block body %}
<div class="bg-gray-900 text-white p-5 min-h-screen">
    <div class="container mx-auto mt-10">
        <h1 class="text-xl font-semibold text-center mb-8 text-white">Multiply Your Number by 2</h1>

        <div class="max-w-md mx-auto bg-gray-800 rounded-lg shadow-lg p-5 border border-gray-700">
            <form id="multiplierForm" class="space-y-4">
                <div>
                    <label for="numberInput" class="block text-lg font-medium text-gray-300 mb-2">Enter a Number</label>
                    <input type="number" 
                           id="numberInput" 
                           class="w-full p-2.5 bg-gray-700 border border-gray-600 text-white placeholder-gray-400 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500" 
                           placeholder="Enter a number" 
                           required>
                </div>
                <button type="button" 
                        id="submitButton" 
                        class="w-full px-5 py-2.5 text-sm font-medium text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 rounded-lg focus:outline-none focus:ring-blue-800">
                    Multiply
                </button>
            </form>

            <div id="resultContainer" class="mt-6 hidden">
                <div class="max-w-md mx-auto rounded-lg bg-blue-900 border border-blue-600 text-center text-blue-200 px-4 py-3 relative mb-4">
                    <span id="resultText"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('submitButton').addEventListener('click', function() {
        const numberInput = document.getElementById('numberInput').value;
        const resultContainer = document.getElementById('resultContainer');
        const resultText = document.getElementById('resultText');

        if (numberInput) {
            const multipliedValue = numberInput * 2;
            resultText.textContent = `The result is: ${multipliedValue}`;
            resultContainer.classList.remove('hidden');
        }
    });
</script>
{% endblock %}