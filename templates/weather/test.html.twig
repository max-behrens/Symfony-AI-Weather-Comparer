{% extends 'base.html.twig' %}

{% block title %}Number Multiplier{% endblock %}

{% block body %}
<div class="container mx-auto mt-10 p-5 w-full overflow-hidden">
    <h1 class="text-3xl font-semibold text-center mb-8">Multiply Your Number by 2</h1>

    <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-5">
        <form id="multiplierForm" class="space-y-4">
            <div>
                <label for="numberInput" class="block text-lg font-medium text-gray-700">Enter a Number</label>
                <input type="number" id="numberInput" class="w-full border-gray-300 rounded-lg p-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Enter a number" required>
            </div>
            <button type="button" id="submitButton" class="w-full px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">Multiply</button>
        </form>

        <div id="resultContainer" class="mt-6 hidden">
            <div class="bg-green-100 border border-green-400 text-green-700 text-center px-4 py-3 rounded relative">
                <span id="resultText"></span>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('submitButton').addEventListener('click', function() {
        const numberInput = document.getElementById('numberInput').value;
        const resultContainer = document.getElementById('resultContainer');
        const resultText = document.getElementById('resultText');

        if (numberInput) {
            const multipliedValue = numberInput * 2;
            resultText.textContent = `The result is: ${multipliedValue}`;
            resultContainer.classList.remove('hidden');
        }
    });
</script>
{% endblock %}
